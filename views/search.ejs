<!-- views/search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <!-- Add links to your stylesheets and other resources here -->
</head>
<body>
  <header>
    <h1><%= pageTitle %></h1>
  </header>
  <main>
    <section>
      <h2>Search Results</h2>
      <ul>
        <% albums.forEach(album => { %>
          <li>
            <img src="<%= album.cover_medium %>" alt="Album Cover">
            <p><strong><%= album.title %></strong> by <%= album.artist.name %></p>
          </li>
        <% }); %>
      </ul>
    </section>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Spinsync</p>
  </footer>
</body>
</html>
