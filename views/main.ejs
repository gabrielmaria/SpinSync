<!-- views/main.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %> c</title>
  <!-- Add links to your stylesheets and other resources here -->
</head>
<body>
  <header>
    <h1>Welcome to <%= pageTitle %> </h1>
  </header>
  <main>
    <section>
      <h2>About Us</h2>
      <p>Discover and rate your favorite albums with our community of music enthusiasts!</p>
      <h2>Search</h2>
      <p>Looking for something specific? Click the button below to start your search.</p>
      <form action="/search" method="get">
        <label for="query">Search for:</label>
        <input type="text" id="query" name="query" required>
        <button type="submit">Search</button>
      </form>
    </section>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> <%= pageTitle %> - Spinsync</p>
  </footer>
</body>
</html>
